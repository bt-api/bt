{
  "name": "bt-api/bt",
  "description": "宝塔服务器API接口封装类",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/bt-api/bt",
  "authors": [
    {
      "name": "bt-api",
      "email": "82279178@qq.com"
    }
  ],
  "keywords": [
    "framework",
    "http",
    "rest",
    "web service",
    "curl",
    "client",
    "HTTP client",
    "PSR-7",
    "PSR-18",
